<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="adk.contentpages">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <section id="contentpage-view">
    <header id="page-header">
      <h1 class="documentFirstHeading" tal:content="context/Title" />
      <div class="row">
        <div class="col col-lg-9 col-offset-3">
          
          <p class="lead" tal:condition="context/Description"
            tal:content="context/Description" />
        </div>
      </div>
    </header>

    <section id="content-core">
      <div class="page-header">
      <h2 class="display-title"
        tal:condition="context/displayTitle"
        tal:content="context/displayTitle" />
      </div>
      <div class="row">
      <div id="page-body"
        class="col col-lg-9"
        tal:condition="context/text"
        tal:content="structure context/text/output" />
      </div>
      <div id="page-subcontent"
        tal:condition="view/has_content">
        <ul>
          <li tal:repeat="item python:context.restrictedTraverse('@@folderListing')()">
            <a tal:attributes="href item/getURL" tal:content="item/Title" />
          </li>
        </ul>

        <tal:block  tal:repeat="item python:context.restrictedTraverse('@@folderListing')()">
          <article class="subpage">
            <header class="subpage-header">
              <h2><a tal:content="item/Title"
                    tal:attributes="href item/getURL" /></h2>
              <p class="subpage-description"
                tal:condition="item/Description"
                tal:content="item/Description" />
            </header>
            <div class="subpage-content">
              <a class="btn btn-default" tal:attributes="href item/getURL"
                i18n:translate="">Read More</a>
            </div>
          </article>
        </tal:block>
      </div>
    </section>

  </section>

  </metal:content-core>
</metal:main>

</body>
</html>

