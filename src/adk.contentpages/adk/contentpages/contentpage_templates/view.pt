<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="adk.contentpages">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <section id="contentpage-view">
    <header id="page-header">
      <h1 class="documentFirstHeading" tal:content="context/Title" />
      <p class="lead" tal:condition="context/Description"
        tal:content="context/Description" />
    </header>

    <section id="content-core">

      <div class="row">
      <div id="page-body"
        class="col col-lg-8 col-offset-4"
        tal:condition="context/text"
        tal:content="structure context/text/output" />
      </div>
     
      <div id="page-subcontent"
        tal:condition="view/has_content">
        <ul>
          <li tal:repeat="item python:context.restrictedTraverse('@@folderListing')()">
            <a tal:attributes="href item/getURL" tal:content="item/Title" />
          </li>
        </ul>

        <tal:block  tal:repeat="item python:context.restrictedTraverse('@@folderListing')()">
          <article class="subpage">
            <header class="subpage-header">
              <h2 tal:content="item/Title" />
              <p class="subpage-description"
                tal:condition="item/Description"
                tal:content="item/Description" />
            </header>
            <div class="subpage-content">
              <div tal:content="structure item/text/output" />
            </div>
          </article>
        </tal:block>
      </div>
    </section>

  </section>

  </metal:content-core>
</metal:main>

</body>
</html>

