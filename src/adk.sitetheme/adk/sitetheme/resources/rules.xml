<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    

    <theme href="frontpage.html" css:if-content="body.portaltype-adk-contentpages-sectionfolder" />

    <!-- Rules applying to standard Plone pages -->
    <rules css:if-content="#visual-portal-wrapper">
        <!--<rules if="$host = 'adk-german-courses.com'">
            <theme href="frontpage-en.html" css:if-content="body.section-front-page" />
            <theme href="theme-en.html" />
        </rules>-->
        <!--<rules if="$host = 'augsburger-deutschkurse.de'">
            <theme href="frontpage-de.html" css:if-content="body.section-front-page" />
            <theme href="theme-de.html" />
        </rules>-->
        <!--<rules if="$host = 'estudiar-aleman.es'">
            <theme href="frontpage-es.html" css:if-content="body.section-front-page" />
            <theme href="theme-es.html" />
        </rules> -->
        <!--<rules if="$host = 'studiare-tedesco.it'">
            <theme href="frontpage-it.html" css:if-content="body.section-front-page" />
            <theme href="theme-it.html" />
        </rules>-->
        <!-- <rules if="$host = 'apprendre-allemand.fr'">
            <theme href="frontpage-fr.html" css:if-content="body.section-front-page" />
            <theme href="theme-fr.html" />
        </rules>-->
        <theme href="theme.html" />

        <replace css:theme="base" css:content="base" />
        <replace css:theme="title" css:content="title" />

        <drop theme="/html/head/meta" />

        <after content="/html/head/meta" theme-children="/html/head" />
        
        <after
            content="/html/head/style | /html/head/script | /html/head/link"
            theme-children="/html/head"
            />

        <drop theme="/html/head/style" />
        <drop theme="/html/head/script" />
        <drop theme="/html/head/link" />
        
        <after theme="/html/head">
            <link rel="shortcut icon" href="/++theme++adk.sitetheme/images/favicon.ico" type="image/x-icon" />
        </after>
        
        <!--<after theme="/html/body"
               content="//div[@data-iframe='plone-toolbar']" />-->
        <!-- Copy over the id/class attributes on the body tag. This is important
             for per-section styling -->
        <merge attributes="class" css:content="body" css:theme="body" />
        <copy attributes="id dir" css:content="body" css:theme="body" />

        <!-- Logo (link target) -->
        <copy attributes="href" css:content="#portal-logo" css:theme="#logo" />

        <!-- CMSUI Editbar replacements -->
        <drop css:theme="#cms-toolbar"
            css:if-content="#anon-personalbar" />
        <replace css:theme="#cms-toolbar"
            css:content="#toolbar" />

        <!-- Site actions -->
        <replace css:content="#portal-siteactions li" css:theme-children="#actions" />

        <!-- User actions -->

        <!-- The logged-in actions are a list... -->
        <after css:content="#portal-personaltools li" css:theme-children="#actions" />

        <!-- ... but for anonymous users, it's a dl, so we build list elements
             using XSL directives
          -->
        <after css:theme-children="#actions">
            <xsl:for-each css:select="#anon-personalbar > a">
                <li><xsl:copy-of css:select="a"/></li>
            </xsl:for-each>
        </after>

        <!-- Global navigation -->
        <replace css:content='#portal-globalnav li' css:theme-children="#main-navigation" />
        <!-- Breadcrumbs -->
        <replace css:content-children='#portal-breadcrumbs' css:theme-children='#breadcrumbs' />

        <!-- Document Content -->
        <!--<drop css:content="#content" css:if-content="body.section-front-page" />-->

        <rules css:if-content="#page-header">
            <replace css:content-children="#page-header"
                css:theme-children="#hero-content" />
            <replace css:content-children="#content-core"
                css:theme-children="#content" />
        </rules>

        <drop css:theme="#hero-content"
            css:if-not-content="#page-header" />

        <replace css:content-children="#content"
            css:theme-children="#content"
            css:if-not-content="#page-header" />
        
        <!-- Edit bar -->
        <!--<replace css:content="#edit-bar" css:theme="#edit-bar" /> 
        <drop css:theme="#editbar-wrapper"
            css:if-content="#anon-personalbar" />
        <replace css:theme="#editbar-wrapper"
            css:content="#toolbar" />-->

        <!-- Status messages not inside #content -->
        <drop css:content="#content .portalMessage"/>
        <before css:content=".portalMessage" method="raw" css:theme="#content" />
        
        <!-- Drop navtree images -->
        <drop css:content="dl#portletNavigationTree img" />

        <!-- Columns -->
        <replace css:content-children="#portal-column-one" css:theme-children="#left-sidebar" />
        
        <replace css:content="#document-toc" css:theme="#actionbox-toc-content"
            css:if-content="#document-toc" />
        <drop css:theme="#actionbox-toc" if-content="not(//*[@id='document-toc'])"/>

        <!-- Footer -->
        <after css:content="#kss-spinner" theme-children="/html/body" />
    
    </rules>

</rules>